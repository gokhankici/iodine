{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["annotations"],
  "properties": {
    "annotations": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "pattern": "^(source|sink|always_eq|assert_eq)$"
              },
              "variables": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "pattern": "^(initial_eq)$"
              },
              "variables": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "module": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "qualifiers": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "pattern": "^(pairs|assume)$"
              },
              "variables": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "pattern": "^(implies|iff)$"
              },
              "lhs": {
                "type": "string"
              },
              "rhs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  }
}
